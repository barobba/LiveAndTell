<?php


/**
 * Page: node/upload/image 
 * @param unknown_type $user
 */
function _latbasicimage_page_upload($user) {

  // Page title
  drupal_set_title('Add pictures from computer');
  
  // Retrieve the "node add" form.
  module_load_include('inc', 'node', 'node.pages');
  $node_add_form = node_add('image');

  // Page content
  $content = '';
  $content .= '<p class="center">To upload a pictures to your account, use the form below.</p>';
  $content .= "<div id='lat-image-upload'>$node_add_form</div>";
  return $content;
  
}
